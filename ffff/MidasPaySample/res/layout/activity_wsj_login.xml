<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_backgroud"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TencentLoginActivity" >

    <TextView
        android:id="@+id/textview"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="打豆豆手游"
        android:textColor="#FFff6600"
        android:textSize="30sp" />

    <ProgressBar
        android:id="@+id/wsj_example_progress"
        android:layout_marginTop="20dp"
        android:layout_below="@id/textview"
        android:layout_centerHorizontal="true"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:visibility="gone"
        style="@android:style/Widget.ProgressBar.Inverse" />

    <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="200dp"
     	android:layout_alignParentBottom="true"
     	android:layout_marginBottom="10dp"
    	android:gravity="center_horizontal"
    	android:orientation="vertical">
        
            
    <Button
        android:id="@+id/wsj_btn_qq"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="QQ号登录"
        android:textColor="#FFff6600" />
        
        <Button
        android:visibility="gone"
        android:id="@+id/wsj_btn_wechat"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="微信登录"
        android:textColor="#FFff6600" />

    <Button
        android:visibility="gone"
        android:id="@+id/wsj_btn_mobileqq"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="手机QQ登录"
        android:textColor="#FFff6600" />

    </LinearLayout>
    
	
</RelativeLayout>