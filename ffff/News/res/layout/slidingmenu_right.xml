<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/ivMap"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/right_map" />

    <RelativeLayout
        android:id="@+id/layoutSA"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/ivMap"
        android:layout_marginTop="30dp" >

        <ImageButton
            android:id="@+id/btnSA"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/left_chose_selector"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/ivSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/right_search" />

        <TextView
            android:id="@+id/tvSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/ivSearch"
            android:text="搜索"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/lineFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivSearch"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/right_henfenge" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutCO"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/layoutSA" >

        <ImageButton
            android:id="@+id/btnCO"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/left_chose_selector"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/ivCollections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/right_collections" />

        <TextView
            android:id="@+id/tvCollections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/ivCollections"
            android:text="收藏"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/lineSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivCollections"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/right_henfenge" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutSE"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/layoutCO" >

        <ImageButton
            android:id="@+id/btnSE"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/left_chose_selector"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/ivSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/right_search" />

        <TextView
            android:id="@+id/tvSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/ivSettings"
            android:text="设置"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/lineThird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivSettings"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/right_henfenge" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutYN"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/layoutSE" >

        <ImageButton
            android:id="@+id/btnYN"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/left_chose_selector"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/ivYunNan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/right_yunnantong" />

        <TextView
            android:id="@+id/tvYunNan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/ivYunNan"
            android:text="云南通"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/lineForth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivYunNan"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/right_henfenge" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/lineShu"
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:layout_below="@+id/ivMap"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/right_shufenge" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/slider_bottom" />

</RelativeLayout>