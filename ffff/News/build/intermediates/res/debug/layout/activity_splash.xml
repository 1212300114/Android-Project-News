<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/change_background"
    tools:context="com.example.demo.news.activity.Splash" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="110dip"
        android:layout_height="110dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dip"
        android:src="@drawable/about_us_logo" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dip"
        android:gravity="center" >

        <TextView
            android:id="@+id/jishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="及时"
            android:textColor="#121212"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/zhunque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/jishi"
            android:padding="10dp"
            android:text="准确"
            android:textColor="#121212"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/quanmian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/zhunque"
            android:padding="10dp"
            android:text="全面"
            android:textColor="#121212"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/shengdong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/quanmian"
            android:padding="10dp"
            android:text="生动"
            android:textColor="#121212"
            android:textSize="20sp" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/C:/Users/123456/ffff/News/res/layout/activity_splash.xml -->