<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/change_background"
    tools:context="com.example.demo.news.activity.SplashActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="110dip"
        android:layout_height="110dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dip"
        android:contentDescription="@null"
        android:src="@drawable/about_us_logo" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dip"
        android:gravity="center">

        <TextView
            android:id="@+id/splashTextOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/splash_text_one"
            android:textColor="#121212"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/splashTextTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/splashTextOne"
            android:padding="10dp"
            android:text="@string/splash_text_two"
            android:textColor="#121212"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/splashTextThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/splashTextTwo"
            android:padding="10dp"
            android:text="@string/spalsh_text_three"
            android:textColor="#121212"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/splashTextFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/splashTextThree"
            android:padding="10dp"
            android:text="@string/splash_text_four"
            android:textColor="#121212"
            android:textSize="20sp" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/Users/jijunjie/Desktop/AndroidProjects/StudioProjectNews/ffff/News/res/layout/activity_splash.xml -->