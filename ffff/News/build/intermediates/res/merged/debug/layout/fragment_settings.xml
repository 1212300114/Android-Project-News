<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.demo.news.activity.SettingsActivity">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_state_selector" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="13dp"
        android:adjustViewBounds="true"
        android:background="@drawable/settings_title"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/lineFirst"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10sp"
        android:scaleType="fitXY"
        android:src="@drawable/fenge" />

    <RelativeLayout
        android:id="@+id/checkUpdate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineFirst"
        android:layout_marginTop="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20sp"
            android:text="@string/check_update"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20sp"
            android:text="@string/current_version"
            android:textColor="#999999"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvVersionState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvVersion"
            android:layout_marginRight="20sp"
            android:text="@string/current_version_state"
            android:textColor="#FF0000"
            android:textSize="12sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/lineSecond"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkUpdate"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10sp"
        android:scaleType="fitXY"
        android:src="@drawable/fenge" />

    <RelativeLayout
        android:id="@+id/clear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineSecond"
        android:layout_marginTop="10sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20sp"
            android:text="@string/clear_cache"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20sp"
            android:background="@drawable/settings_arrow" />

        <TextView
            android:id="@+id/tvCacheSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10sp"
            android:layout_toLeftOf="@+id/btnClear"
            android:text="@string/cache_size"
            android:textColor="#999999" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/lineThird"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clear"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10sp"
        android:scaleType="fitXY"
        android:src="@drawable/fenge" />

    <RelativeLayout
        android:id="@+id/reflect"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineThird"
        android:layout_marginTop="10sp">

        <TextView
            android:id="@+id/tvReflect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:text="@string/reflect"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btnReflect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20sp"
            android:background="@drawable/settings_arrow"
            android:scaleType="fitXY" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/C:/Users/123456/ffff/News/res/layout/fragment_settings.xml -->