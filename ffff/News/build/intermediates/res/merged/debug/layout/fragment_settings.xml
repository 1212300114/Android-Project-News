<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.demo.news.activity.Settings" >

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_state_selector" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10sp"
        android:adjustViewBounds="true"
        android:maxHeight="20sp"
        android:background="@drawable/settings_title" />

    <ImageView
        android:id="@+id/lineFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnBack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:src="@drawable/fenge" />

    <RelativeLayout
        android:id="@+id/checkUpdate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineFirst"
        android:layout_marginTop="20sp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20sp"
            android:text="检查更新"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20sp"
            android:text="当前版本"
            android:textColor="#999999"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvVersionState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvVersion"
            android:layout_marginRight="20sp"
            android:text="已经是最新版本"
            android:textColor="#FF0000"
            android:textSize="12sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/lineSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkUpdate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:src="@drawable/fenge" />

    <RelativeLayout
        android:id="@+id/clear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineSecond"
        android:layout_marginTop="10sp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20sp"
            android:text="清理缓存	"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20sp"
            android:background="@drawable/settings_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10sp"
            android:layout_toLeftOf="@+id/btnClear"
            android:text="缓存大小"
            android:textColor="#999999" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/lineThird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:src="@drawable/fenge" />

    <RelativeLayout
        android:id="@+id/reflect"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lineThird"
        android:layout_marginTop="10sp" >

        <TextView
            android:id="@+id/tvReflect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:text="意见反馈"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btnReflect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20sp"
            android:background="@drawable/settings_arrow" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/C:/Users/123456/ffff/News/res/layout/fragment_settings.xml -->